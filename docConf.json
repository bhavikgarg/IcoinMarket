{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
		"include" : ["server","client/app","client/components" ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [ "plugins/markdown"],
    "markdown" : {
      "idInHeadings" : true,
      "hardwrap" : true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
	"opts": {
		"template": "templates/default",
		"encoding": "utf8",
		"destination": "./cidocs/",
		"recurse": true
	}
}
